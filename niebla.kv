    
<BaseTextImageLayout>:
    orientation: "vertical"
    padding: "25dp", "50dp","25dp","40dp"  # left, top, right, and bottom. If only one value, same for all

<BaseButtonLayout>:
    orientation: "vertical"
    spacing: "10dp"  # space between widgets
    padding: "0dp", "0dp","0dp","55dp"

<BaseTextLabel>:
    font_name: "Vollkorn"
    font_size: "21sp"

<BaseButton>:
    font_name: 'CreteRound'
    font_size: '21sp'
    padding: '25dp', '15dp', '25dp', '15dp'
    background_color: 1, 1, 1, 0.45
    size_hint: 1, None
    height: "60dp"

<TitleLabel>:  # displays the title of the game
    font_name: "Chiller"
    padding: "25dp", "50dp","25dp","80dp"
    halign: "center"
    font_size: "120sp"

<ScreenLayout>:  # main layout of the screen. Contains TextLayout and ButtonLayout and it is embedded in the ScrollView
    orientation: "vertical"
    size_hint: 1, None
    height: self.minimum_height

<GameTextImageLayout>:  # layout for organizing text and images (GameLabel)
    size_hint: 1, None
    height: self.minimum_height

<GameButtonLayout>:  # layout for organizing in-game buttons (GameButton)
    size_hint: 1, None
    height: self.minimum_height

<ImageLayout>:  # layout for organizing individual in-game pictures
    padding: "0dp", "0dp","0dp","25dp"
    size_hint: 1, None
    height: self.minimum_height

<GameText>:  # displays in-game text
    markup: True
    size_hint: 1, None
    text_size: self.width, None
    height: self.texture_size[1]

<GameImage>:  # displays in-game pictures
    halign: "center"
    size_hint: 1, None
    size: self.texture_size


<MenuButton@BaseButton>:
    font_size: "30sp"
    height: "100dp"

<LanguageMenu>
    BoxLayout:
        orientation: "vertical"
        BaseTextImageLayout:
            BaseTextLabel:
                font_name: "Vollkorn"
                font_size: "40sp"
                text: "Choose the language"
        BaseButtonLayout:
            MenuButton:
                text: "English"
                on_release: app.start_game("languages/Fog.json")
            MenuButton:
                text: "Espa√±ol"
                on_release: app.start_game("languages/Niebla.json")
